    <TextView
        android:id="@+id/koszyk_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Koszyk"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:textSize="24sp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/komputery_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Komputer:"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_below="@id/koszyk_title"

        />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/komputery_title"
        />

    <TextView
        android:id="@+id/dodatki_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dodatki:"
        android:textSize="18sp"
        android:layout_below="@id/spinner1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        />


    <CheckBox
        android:id="@+id/myszki_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Myszka"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_below="@id/dodatki_title"
        />


    <Spinner
        android:id="@+id/spinner2"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/myszki_title"
        />

    <CheckBox
        android:id="@+id/klawiatury_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Klawiatura"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_below="@id/spinner2"
        />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/klawiatury_title"
        />

    <CheckBox
        android:id="@+id/kamery_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kamera"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_below="@id/spinner3"
        />

    <Spinner
        android:id="@+id/spinner4"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/kamery_title"
        />

    <EditText
        android:id="@+id/name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner4"
        android:layout_marginHorizontal="20dp"
        android:hint="Podaj imię i nazwisko lub nazwę firmy:"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/order_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Złóż zamówienie"
        android:layout_below="@id/name_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        />

    </RelativeLayout>




